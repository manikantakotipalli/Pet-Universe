package com.petLife.demo.petstore.UserController;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.petLife.demo.petstore.Models.LoginDto;
import com.petLife.demo.petstore.Models.RegistrationModel;
import com.petLife.demo.petstore.StoringDataService.DataSearching;
import com.petLife.demo.petstore.StoringDataService.LoginService;
import com.petLife.demo.petstore.StoringDataService.StoringDataService;
import com.petLife.demo.petstore.StoringDataService.UserUpdatedService;
import com.petLife.demo.petstore.StoringDataService.gettingAllDataServices;

@RestController
@RequestMapping("/User")
public class RegistrationController {
	    @Autowired
	   public StoringDataService storingDataService;
	    @Autowired
	   public LoginService loginService; 
	    @Autowired
	    public DataSearching datasearching;
	    @Autowired
	    public gettingAllDataServices  gettingdata;
	    @Autowired
	    public UserUpdatedService userUpdatedService;
	    
	@PostMapping("/AddUser")
	public String  postingData(@RequestBody RegistrationModel registrationModel) 
	         {
		return storingDataService.saveDataService(registrationModel);
	              }
	@PostMapping("/Login")
	    public String  checkUser(@RequestBody LoginDto logindto ) {
		 
		   	return  loginService.checking(logindto);    
	       
	    }
	 @GetMapping("/findAll")
	    public List<RegistrationModel> findingall(){
			return gettingdata.findallData();
	    }
	  @GetMapping("/{input}")
	  public List<RegistrationModel> gettingAllData(@PathVariable String input) {
	      return datasearching.searching(input);
	         }
	  @PutMapping("/{userName}")
	  public String  updateData(@PathVariable String userName, RegistrationModel registrationModel) {
		  
		  return userUpdatedService.userUpdated(userName,registrationModel);
	  }
	  @DeleteMapping("/{delete}")
   public String deleteInput(@PathVariable) {
	   
	   
	return null;
		   
	   }

}
