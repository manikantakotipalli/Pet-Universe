package com.petLife.demo.petstore.JpaRepository;

import java.util.List;
import java.util.UUID;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.petLife.demo.petstore.Models.RegistrationModel;

import jakarta.persistence.Column;

@Repository
public interface JpaRepo extends JpaRepository<RegistrationModel,UUID> {
	
	
	// cheking the given data Exists or not 
	List<RegistrationModel> findByUserName(String username);
    List<RegistrationModel> findByMobileNumber(long mobileNumber);
    List<RegistrationModel> findByEmail(String email);
    
    //Login Checking 
	public RegistrationModel findByUserNameAndPassword(String username, String password);
    
	//finding any input Data in Exists 
	@Query("SELECT r FROM RegistrationModel r  WHERE r.userName = :something OR r.firstName = :something OR r.lastName=:something OR r.email=:something" )
	public List<RegistrationModel> findBySomething(@Param("something") String something);
	
	//Updateting the Exists user Data
	public RegistrationModel findByuserName(String userName);
	
	public String deleteingData()
	
}
