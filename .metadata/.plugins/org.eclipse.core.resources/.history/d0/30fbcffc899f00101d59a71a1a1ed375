package com.petLife.demo.petstore.StoringDataService;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.petLife.demo.petstore.JpaRepository.JpaRepo;
import com.petLife.demo.petstore.Models.RegistrationModel;

@Service
public class UserDeleteService {
	
	@Autowired
	public JpaRepo jpaDelete;
	
	public String deletingExists(String delete) {
		
	String findData=jpaDelete.findByuserName(delete);
		
		       if(findData==null)
		       {
		    		return 	"the given UserName is doesn't Exists";  
		       }
		       
		       else {
		    	   jpaDelete.deleteAllInBatch();
		       }
		return "the"+findData+"Deleted Successfully";
	}
}
