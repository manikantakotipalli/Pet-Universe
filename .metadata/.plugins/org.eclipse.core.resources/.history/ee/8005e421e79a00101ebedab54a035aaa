package com.petLife.demo.petstore.UserController;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.petLife.demo.petstore.Models.LoginDto;
import com.petLife.demo.petstore.Models.RegistrationModel;
import com.petLife.demo.petstore.StoringDataService.DataSearching;
import com.petLife.demo.petstore.StoringDataService.LoginService;
import com.petLife.demo.petstore.StoringDataService.StoringDataService;

@RestController
@RequestMapping("/Store")
public class RegistrationController {
	    @Autowired
	   public StoringDataService storingDataService;
	    @Autowired
	   public LoginService loginService; 
	    @Autowired
	    public DataSearching datasearching;
	    
	    
	@PostMapping
	public void postingData(@RequestBody RegistrationModel registrationModel) 
	{
		storingDataService.saveDataService(registrationModel);
	}
	@PostMapping("/Login")
	    public String  checkUser(@RequestBody LoginDto logindto ) {
		 
		   	return  loginService.checking(logindto);    
	       
	    }
	  @GetMapping("/{input}")
	 public String  gettingAllData(@RequestParam String input ) {
		  
		  
		return   datasearching.searching(input);
		 
	 }

}
