package com.petLife.demo.petstore.StoringDataService;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.petLife.demo.petstore.JpaRepository.JpaRepo;

@Service
public class UserDeleteService {
	
	@Autowired
	public JpaRepo jpaDelete;
	
	public String deletingExists(String delete) {
		
		 if(jpaDelete.findByUserName(delete)==null) {

		return " the given userName Doesn't Exists!" ;}
		 else {
			 
			 return " the given userName Deleted successfully! ";
		 }
		
	}
}
